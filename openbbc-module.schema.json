{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "enum": [
        "https://smplecosystem.github.io/SmplArchitecture/openbbc-module.schema.json"
      ]
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "files": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "$ref": "#/definitions/file"
      }
    }
  },
  "definitions": {
    "file": {
      "type": "object",
      "properties": {
        "classes": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "$ref": "#/definitions/class"
          }
        }
      }
    },
    "class": {
      "type": "object",
      "properties": {
        "implements": {
          "type": "array",
          "format": "uri-reference",
          "items": {
            "type": "string"
          }
        },
        "extends": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri-reference"
          }
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "$ref": "#/definitions/variable"
          }
        },
        "methods": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "$ref": "#/definitions/function"
          }
        }
      }
    },
    "function": {
      "type": "object",
      "properties": {
        "description": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "modifiers": {
          "$ref": "#/definitions/modifier"
        },
        "returnTypes": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri-reference"
          }
        },
        "arguments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "format": "uri-reference"
              },
              "name": {
                "type": "string"
              }
            }
          }
        },
        "assertions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "variable": {
      "type": "object",
      "properties": {
        "modifiers": {
          "$ref": "#/definitions/modifier"
        },
        "type": {
          "type": "string",
          "format": "uri-reference"
        }
      }
    },
    "modifier": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "public",
          "private",
          "readonly",
          "protected",
          "static",
          "async",
          "abstract"
        ]
      }
    }
  }
}